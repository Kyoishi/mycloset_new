<div class="content-section-c">

      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-md-4 col-md-offset-4">
              <h1 class="text-center login-title">登録情報</h1>

          <div class="account-wall">

          <%= form_for current_user do |f| %>
          <p>プロフィール名</p>
          <%= f.text_field :nickname, placeholder: "ニックネーム" %><br />
          <p>プロフィール画像</p>
          <%= f.file_field :avatar %>
          <%= f.submit "編集", class:'btn btn-lg btn-primary btn-block' %>

        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>