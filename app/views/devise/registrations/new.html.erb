<div class="content-section-c">

  <div class="container">
      <div class="row">
          <div class="col-sm-6 col-md-4 col-md-offset-4">
              <h1 class="text-center login-title">新規登録</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="account-wall">

      <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">

    <form class="form-signin">

      <%= f.label :メールアドレス  %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレスを入力', class: 'form-control' %>

      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off"  ,placeholder: 'パスワードを入力',class: 'form-control' %>

      <%= f.label :パスワード（確認） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワードを入力(確認用)',class: 'form-control' %>

      <%= f.label :ニックネーム %><br />
      <%= f.text_field :nickname, placeholder: 'ニックネームを入力(必須)',class: 'form-control' %>
    
      <label>画像アップロード</label>
      <%= f.file_field :avatar %><br />

      <%= f.submit "新規登録" ,class:'btn btn-lg btn-primary btn-block' %>

    <% end %>

    </form>

    </div>

    <a class="text-center new-account">
    <%= render "devise/shared/links" %>
    </a>
    <h1 class="text-center login-title">
    <%= devise_error_messages! %>
    </h1>
          </div>
      </div>
  </div>

</div>