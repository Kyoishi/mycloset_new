<div class="content-section-c">

  <div class="container">
      <div class="row">
          <div class="col-sm-6 col-md-4 col-md-offset-4">
              <h1 class="text-center login-title">確認メールの再送信</h1>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  

  <div class="account-wall">

    <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">

  <form class="form-signin">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,placeholder: 'メールアドレスを入力', class: 'form-control', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>

    <%= f.submit "確認メールの再送信",class:'btn btn-lg btn-primary btn-block' %>

<% end %>
</form>

<%= render "devise/shared/links" %>
<h1 class="text-center login-title">
<%= devise_error_messages! %>
</h1>
        </div>
      </div>
    </div>
  </div>
</div>
