<div class="content-section-c">

      <div class="container">
          <h2>
          新規作成
          </h2>

          <%= form_tag(action: :create) do %>
          <input name="coordinate_id" value= <%= @num+1 %> type="hidden">
          <select name="outfit_id[]" multiple="multiple">
          <% @outfits.each do |outfit| %>
          <option data-img-src= <%= outfit.image %> name="outfit_id" value= <%= outfit.id %> >
          </option>
          <% end %>
          <input type="submit" value="コーデ作成" class="btn btn-primary withripple"  %>
          <% end %>

          <script type="text/javascript">
          $("select").imagepicker()
          </script>

      </div>
    </div>
  </div>
