<div class="content-section-c">

      <div class="container">
          <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4">
                  <h1 class="text-center login-title">編集</h1>
          
          <div class="account-wall">
          <%= form_for [@user, @outfit],:html => {:multipart => true} do |f| %>

            <%= f.select :category, @categories.map{|t| [t.name, t.id]} %><br /><br />

            <%= f.text_field :brand, placeholder: "ブランド名", class: 'form-control'  %><br />
            <%= f.text_field :name, placeholder: "名前 (好きな名前をつけてください)",class: 'form-control' %><br />
            <%= f.text_field :year, placeholder: "購入年 (例: 2016)",class: 'form-control' %><br />
            <%= f.text_field :price, placeholder: "購入価格 (例: 30,000)",class: 'form-control' %><br />
            <%= f.file_field :image %><br />
            <%= f.submit "編集",class:'btn btn-lg btn-primary btn-block' %>
            
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>